<%- include('common/header') -%>
<div class="d-flex justify-content-between mb-2">
  <h2>Workout Journal</h2>
  <button class="btn btn-primary" onclick="location.href='/workouts/new'">
    <i class="bi bi-plus-lg"></i>
  </button>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Length (mins)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% workouts.forEach((workout) => { %>
    <tr>
      <td><%= workout.name %></td>
      <td><%= workout.date.toLocaleDateString() %></td>
      <td><%= workout.length %></td>
      <td>
        <button
          class="btn btn-sm btn-primary"
          onclick="location.href='/exercises/<%= workout._id %>'"
        >
          Exercises
        </button>
        <button
          class="btn btn-sm btn-success"
          onclick="location.href='/workouts/edit/<%= workout._id %>'"
        >
          <i class="bi bi-pencil-fill"></i>
        </button>
        <button
          class="btn btn-sm btn-danger"
          onclick="location.href='/workouts/delete/<%= workout._id %>'"
        >
          <i class="bi bi-trash-fill"></i>
        </button>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<%- include('common/footer') -%>
